<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/Black_Gray"
              android:gravity="center"
              android:orientation="vertical">

    <TextView
        android:id="@+id/chat_textViewSpeech"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="15dp"
        android:textColor="@color/display_page_footbar"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/chat_textViewAnswer"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="5dp"
        android:text="Don't tell me"
        android:textSize="24sp"/>

    <ImageView
        android:id="@+id/chat_apiImage"
        android:layout_width="42dp"
        android:layout_height="53dp"
        android:contentDescription="TODO"
        android:src="@drawable/api"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/chat_imageViewSpeechBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="TODO"
        android:src="@drawable/chat_record_logo_green_status"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="right"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/chat_imageBack"
            android:layout_width="93dp"
            android:layout_height="93dp"
            android:layout_marginLeft="295dp"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@drawable/chat_back"/>
    </LinearLayout>

</LinearLayout>
